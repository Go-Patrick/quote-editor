<main class="container" style="width: 30rem;">
  <h2 class="mb-l">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", placeholder: "Email", class: "mb-s" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", placeholder: "Password", class: "mb-s" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-block btn--dark" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</main>
